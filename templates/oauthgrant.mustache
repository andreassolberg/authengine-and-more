													<span style="">{{user.email}}</span>
											{{/perms.global.userinfo-mail}}


										</p>

										{{#perms.global.openid}}
											<p style="color: #888"><i class="fa fa-openid" style="color: #800"></i> OpenID Connect</p>
										{{/perms.global.openid}}



										<p class="clearfix"></p>


								</div><!-- media-body -->
							</div><!-- media -->

						</div><!-- panel -->
