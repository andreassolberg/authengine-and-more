						<div class="media-body">

							<h3 class="media-heading" style="padding: 0px">{{client.name}}</h3>


							<div class="grantDetails">

							{{#client.descr}}
								<p style="margin: 0px">{{.}}</p>
							{{/client.descr}}

							<p style=""><code>{{client.host}}</code></p>

							{{^client.isSecure}}
