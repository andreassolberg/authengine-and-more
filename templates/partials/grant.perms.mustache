

{{#perms.userinfo}}
	<div class="list-group-item  grantEntry grantEntryActive">


		<div class="pull-right grantDetails selectIndicator" style="font-size: 150%"><i class="glyphicon glyphicon-chevron-down "></i></div>
		<div class="pull-right grantDetailsHide selectIndicator" style="font-size: 150%"><i class="glyphicon glyphicon-chevron-left "></i></div>

		<p class="" style="margin-bottom: 0px">
			<span style="" class="glyphicon glyphicon-user"></span> {{_.accesstouserinfo}}</p>
	

		<div class="grantDetails">


			{{#perms.userinfo.userid}}
			<p class="userInfoEntry">
				<span class="fa fa-user"></span>
					<abbr title="{{user.userid}}">{{_.userid}}</abbr> &nbsp; &nbsp;
			</p>
			{{/perms.userinfo.userid}}
			{{#perms.userinfo.name}}
			<p class="userInfoEntry">
				<span class="fa fa-user"></span>
					<abbr title="{{user.name}}">{{_.name}}</abbr> &nbsp; &nbsp;
			</p>
			{{/perms.userinfo.name}}

			{{#perms.userinfo.photo}}
			<p class="userInfoEntry">
					<span class="fa fa-user"></span>
						<span style="">{{_.profilephoto}}</span> &nbsp; &nbsp;
			</p>
			{{/perms.userinfo.photo}}



			{{#perms.userinfo.userid-feide}}
			<p class="userInfoEntry">
					<span  class="fa fa-user"></span>
						<span style="">{{_.feideid}}</span> &nbsp; &nbsp;
			</p>
			{{/perms.userinfo.userid-feide}}

			{{#perms.userinfo.email}}
			<p class="userInfoEntry">
					<span  class="fa fa-envelope-o"></span>
						<span style="">{{_.email}}: <tt>{{user.email}}</tt></span>
			</p>
			{{/perms.userinfo.email}}
			

		</div>

	</div><!-- panel -->
{{/perms.userinfo}}



